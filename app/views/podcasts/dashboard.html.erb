  <div id="podcast_show">
    <div id="show_banner">
    <div class="wrapper_skinny">
      <h1>The Rocketship Podcast Dashboard</h1>
    </div>
    </div>
    <div id="link">
      <div class="wrapper_skinny">
        <ul>
          <li class="current">Episodes</li>
          <li><%= link_to "New Episode", new_podcast_episode_path(@podcast) %></li>
          <li><%= link_to "Account Setting", edit_podcast_registration_path%></li>
          <li><%= link_to "View Podcast", podcast_path(current_podcast)  %></li>
        </ul>
      </div>
  </div>

  
    <div id="episodes">
      <div class="wrapper_skinny">
        <ul class="cf">
        <% @episodes.each do |episode| %>

    
          <li class="cf">
            <div class="episode_thumbnail">

              <%= image_tag episode.episode_thumbnail.url(:medium) %>

            </div>
            <div class="episode_overview">
              <h2><%= link_to episode.title, podcast_episode_path(@podcast,episode) %>
              <p class="description"><%= truncate(episode.description, length: 160) %></p>
              <div class="authorized_link">
              <%= link_to "Edit", edit_podcast_episode_path(@podcast,episode), class: "btn_link" %>
              <%= link_to "Delete", podcast_episode_path(@podcast,episode), method: :Delete, data: {confirm: "Are you sure?"}, class: "btn_link" %>
  
              </div>
            </div>
          </li>
          <% end %>
        </ur>
      </div>
    </div>
  </div>
  <div class="pagination">
    <span class="previous_page disabled">Previous</span>
