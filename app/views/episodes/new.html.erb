          <li><%= link_to "View Podcast", podcast_path(current_podcast)  %></li>
        </ul>
      </div>
  </div>
<div id="form">
    <div class="wrapper_skinny">
		  <%= form_for ([@podcast, @episode]) do |f| %>
		  <div class="field">
				<%= f.label :title %> <br>
				<%= f.text_field :title %>
			</div>
			<br>
			<br>
			<div class="field">
				<%= f.label :description %> <br>
				<%= f.text_area :description %>
			</div>
			<br>
			<br>
			<div class="actions">
				<%= f.submit "Create", class: "button button_highlight button_block"%>
			</div>
		  <% end %>
		</div>
</div>